@model Nike.Models.KhachHang

@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="app__container">
    <div class="grid">
        <div class="grid__row app__content">
            <div class="grid__column-2">
                @{
                    Html.RenderPartial("menuProfile");
                }
            </div>


            <div class="grid__column-10">
                <div class="grid row" style="text-align:center">
                    <div class="form-horizontal">
                        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-horizontal">
                                <h4>Thay đổi mật khẩu</h4>
                                <hr />
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.idUser)

                                <div class="form-group">
                                    Mật khẩu cũ
                                    <div class="col-md-10">
                                        <input class="form-control text-box single-line" name="oldPassword" />
                                        @Html.ValidationMessageFor(model => model.oldPassword, "", new { @class = "validate" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <h5>Mật khẩu mới</h5>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validate" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <h5>Xác nhận mật khẩu cũ</h5>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "validate" })
                                    </div>
                                </div>
                                <div class="form-group form-btn">
                                    <div class="col-md-offset-2 col-md-10 form-btn__submit">
                                        <input type="submit" value="Đổi mật khẩu" class="btn btn--primary" />
                                    </div>
                                    <div>
                                        @Html.ActionLink("Quay lại", "ProFile","Account", new { @class = "btn btn--default" })
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<style>
    .form-group{
        margin: 20px;
    }
    .validate{
        color: #ff0000
    }
    .btn--primary{
        margin: 10px;
    }

</style>




