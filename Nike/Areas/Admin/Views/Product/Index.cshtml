@model Nike.Models.Product

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_layoutadmin.cshtml";
}



<div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item active"><a href="#"><b>Danh sách sản phẩm</b></a></li>
        </ul>
        <div id="clock"></div>
</div>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="row element-button">
                        <div class="col-sm-2">

                            <a class="btn btn-add btn-sm" href="@Url.Action("Create","Product")">
                                <i class="fas fa-plus"></i>
                                Tạo mới sản phẩm
                            </a>
                        </div>

                        <div class="col-sm-2">
                            <a class="btn btn-delete btn-sm print-file js-textareacopybtn" type="button" title="Sao chép">
                                <i class="fas fa-copy"></i> Sao chép
                            </a>
                        </div>

                        <div class="col-sm-2">
                            <a class="btn btn-excel btn-sm" href="" title="In"><i class="fas fa-file-excel"></i> Xuất Excel</a>
                        </div>

                        <div class="col-sm-2">
                            <a class="btn btn-delete btn-sm" type="button" title="Xóa" onclick="myFunction(this)">
                                <i class="fas fa-trash-alt"></i> Xóa tất cả
                            </a>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            
                        </div>
                        <div class="col-sm-12 col-md-6">
                            @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "dataTables_filter d-flex justify-content-end" }))
                            {
                                <label>
                                    Tìm kiếm:

                                    @Html.TextBox("searchString", null, new { @class = "form-control form-control-sm" })

                                </label>
                            }
                        </div>
                    </div>
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                            
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Số lượng</th>
                                <th>Đã bán</th>
                                <th>Giá tiền</th>
                                <th>Nhãn hiệu</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.products)
                            {
                                <tr>
                                   
                                    <td>@item.ProductCode</td>
                                    <td>@item.ProductName</td>
                                    <td> <img src="~/Hinh//@Url.Content(@item.Picture)" alt="Image" width="100" height="100" /></td>
                                    <td>@item.SoLuong</td>
                                    <td>@item.ProductSold</td>
                                    <td>@string.Format("{0:#,0}", item.UnitPrice)</td>
                                    <td>@item.Catalog.CatalogName</td>
                                    <td>
                                        <button class="btn btn-primary btn-sm trash" type="button" title="Xóa"
                                                onclick="location.href='@Url.Action("Delete", "Product",new { id = item.Id })'">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                        <button class="btn btn-primary btn-sm edit" type="button" title="Sửa"
                                                onclick="location.href='@Url.Action("Edit", "Product",new { id = item.Id })'">
                                            <i class="fas fa-edit"></i>
                                        </button>

                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>