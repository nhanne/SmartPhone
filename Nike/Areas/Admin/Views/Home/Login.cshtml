@model Nike.Models.NhanVien

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login Admin</title>

    <link rel="stylesheet" type="text/css" href="~/Assets/Admin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Assets/Admin/css/main.css">
</head>

<body class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">ĐĂNG NHẬP HỆ THỐNG QUẢN TRỊ</div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email</label>
                        @Html.TextBoxFor(u => u.Email, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                    <input class="btn btn-primary btn-block" type="submit" value="Log In" />
                }
            </div>
        </div>
    </div>

</body>

</html>